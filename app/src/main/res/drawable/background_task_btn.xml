<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_activated="true">
        <shape android:shape="oval">
            <solid android:color="@color/palette_deep_orange_300"/>
            <stroke android:width="6dp" android:color="@color/palette_deep_orange_500"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="oval">
            <solid android:color="@color/palette_blue_grey_900"/>
            <stroke android:width="2dp" android:color="@color/palette_blue_grey_500"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <solid android:color="@color/palette_blue_grey_500"/>
            <stroke android:width="2dp" android:color="@color/palette_blue_grey_300"/>
        </shape>
    </item>

</selector>